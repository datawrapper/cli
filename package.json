{
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "healthier",
            "git add"
        ]
    },
    "scripts": {
        "format": "prettier 'src/**/*.js' --write",
        "lint": "prettier --check 'src/**/*.{js,html}' && healthier 'src/**/*.{js,html}'",
        "prepublishOnly": "npm run build",
        "test": "npm run build && node bin/index.js --version && node bin/index.js --help",
        "build": "parcel build src/index.js --target node --out-dir bin/",
        "start": "parcel src/index.js --target node --out-dir bin/"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn"
            ]
        }
    },
    "name": "@datawrapper/cli",
    "version": "0.3.0",
    "description": "Command Line Utility to make project scaffolding and tooling setup simple.",
    "main": "bin/index.js",
    "bin": {
        "dw": "bin/index.js"
    },
    "files": [
        "bin",
        "config"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/datawrapper/cli.git"
    },
    "keywords": [
        "cli",
        "tooling",
        "lint",
        "format",
        "ci",
        "setup"
    ],
    "author": "Fabian Guendel <f.guendel@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/datawrapper/cli/issues"
    },
    "homepage": "https://github.com/datawrapper/cli#readme",
    "devDependencies": {
        "@babel/core": "~7.4.3",
        "@babel/preset-react": "~7.0.0",
        "babel-eslint": "~10.0.1",
        "babel-plugin-transform-react-jsx": "~6.24.1",
        "healthier": "~2.0.0",
        "husky": "~1.3.1",
        "lint-staged": "~8.1.5",
        "parcel-bundler": "~1.12.3",
        "parcel-plugin-shebang": "~1.2.3",
        "prettier": "~1.16.4"
    },
    "dependencies": {
        "commander": "2.20.0",
        "fs-extra": "7.0.1",
        "ink": "2.1.1",
        "ink-box": "1.0.0",
        "ink-confirm-input": "1.0.3",
        "ink-gradient": "1.0.0",
        "ink-multi-select": "1.0.3",
        "ink-select-input": "3.1.0",
        "ink-spinner": "3.0.0",
        "lodash": "4.17.11",
        "react": "16.8.6",
        "shelljs": "0.8.3"
    }
}
